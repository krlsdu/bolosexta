<p class="bg-success" id="notice"><%= notice %></p>

<h1>Listing People</h1>
<div class="row">
  <div class="col-sm-10">
    <%= link_to 'New Person', new_person_path, class:"btn btn-default" %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= link_to 'Show', person, class:"btn btn-default"  %></td>
          <td><%= link_to 'Edit', edit_person_path(person), class:"btn btn-default"  %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


