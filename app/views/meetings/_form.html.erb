<%= form_for(@meeting, html:{class:"form-horizontal"}) do |f| %>
  <% if @meeting.errors.any? %>
    <div class="text-danger" id="error_explanation">
      <h2 ><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul class="bg-danger">
        <% @meeting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

    <div class="col-sm-10">
      <%= f.label :date %><br>
      <%= f.date_select :date, discard_year: true%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :cake_id %><br>
      <%= f.collection_select(:cake_id, Cake.order(:nome),:id, :nome,:prompt => true) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :person_id %><br>
      <%= f.collection_select(:person_id,Person.order(:nome),:id, :nome,:prompt => true)%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit class:"btn btn-default" %>
    </div>
  </div>
<% end %>

