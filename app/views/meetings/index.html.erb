<p class="bg-success" id="notice"><%= notice %></p>

<h1>Listing Meetings</h1>
<div class="row">
  <div class="col-sm-10">
    <%= link_to 'New Meeting', new_meeting_path, class:"btn btn-default" %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Cake</th>
        <th>Person</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @meetings.each do |meeting| %>
        <tr>
          <td><%= meeting.date %></td>
          <td><%= meeting.cake.nome %></td>
          <td><%= meeting.person.nome %></td>
          <td><%= link_to 'Show', meeting, class:"btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_meeting_path(meeting),class:"btn btn-default" %></td>
          <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %></td>
          <td><%= link_to 'Sms', messages_reply_path, method: :reply, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>


